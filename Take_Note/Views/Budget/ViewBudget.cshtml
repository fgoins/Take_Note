@model Budget
<body class="background2">
</body>
<div class=" budgetFont">
<h3>@Model.Bill Information </h3>
</div>
<table class="table budgetFont">
    <tr>
        <th>ID</th>
        <th>Bill</th>
        <th>Amount</th>
        <th>DueDate</th>
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Bill</td>
        <td>@Model.Amount</td>
        <td>@Model.DueDate</td>
    </tr>
</table>

<div style="display: block budgetFont">
    <a href="/Budget/UpdateBudget/@Model.ID">Update this Bill</a>
</div>

<div style="display: block budgetFont">

    @using (Html.BeginForm("DeleteBudget", "Budget", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Bill" />
    }
</div>